<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vanoce"
    tools:context=".MainActivity">

    <!-- Hlavní uvítací text -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vítej ve Vánoční kvízové aplikaci!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Tlačítko pro zobrazení Zajímavostí -->
    <Button
        android:id="@+id/btnZajimavosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zajímavosti o Vánocích"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Tlačítko pro spuštění Kvízu -->
    <Button
        android:id="@+id/btnKviz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spustit kvíz"
        app:layout_constraintTop_toBottomOf="@id/btnZajimavosti"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
